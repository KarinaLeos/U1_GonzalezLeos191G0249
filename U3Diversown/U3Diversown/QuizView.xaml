<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="U3Diversown.QuizView" NavigationPage.HasBackButton="False" >
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Frame CornerRadius="20" Grid.Row="0" Margin="5">
            <Frame>
                <Image x:Name="imgImagen" HeightRequest="450"></Image>
            </Frame>
        </Frame>
        <StackLayout  Grid.Row="1" Margin="5,5,5,10">
        <StackLayout.Resources>
            <Style TargetType="Button">
                <Setter Property="HeightRequest" Value="60"/>
                    <Setter Property="WidthRequest" Value="60"></Setter>
                    <Setter Property="CornerRadius" Value="30"></Setter>
                    <Setter Property="BorderWidth" Value="1"></Setter>
                    <Setter Property="BorderColor" Value="White"></Setter>
            </Style>
        </StackLayout.Resources>
         <Button x:Name="btnC"  Grid.Column="0" ></Button>
         <Button x:Name="btn1" Grid.Column="0" Grid.Row="1"></Button>
         <Button x:Name="btn2"  Grid.Column="1" Grid.Row="0"></Button>
            <Button x:Name="btn3" Grid.Column="1" Grid.Row="1"></Button>
        </StackLayout>
    </Grid>
</ContentPage>