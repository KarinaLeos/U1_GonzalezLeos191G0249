            <Label HorizontalOptions="Center" FontSize="30" Margin="0,20" HorizontalTextAlignment="Center" FontFamily="texto">Sembrando conocimiento</Label>
            <Button   Text="Plantar semilla" TextColor="White" BackgroundColor="#E06C78" BorderColor="White" BorderWidth="2" CornerRadius="10" HorizontalOptions="FillAndExpand" VerticalOptions="End" Margin="0,15,0,0" Clicked="Button_Clicked" ></Button>
        </StackLayout>
    </Frame>


</ContentPage>
